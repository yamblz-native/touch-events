<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="@dimen/delete_btn_width"
        android:layout_height="@dimen/delete_btn_height"
        android:layout_gravity="center"
        android:background="@drawable/round_button"
        android:enabled="false"
        android:textSize="@dimen/delete_btn_text_size"
        android:textColor="@color/black"
        android:text="@string/title_btn_delete" />

    <ru.yandex.yamblz.ui.views.DotsView
        android:id="@+id/dotsView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/cardview_width"
        android:layout_height="@dimen/cardview_height"
        android:layout_gravity="center"
        android:layout_margin="@dimen/cardview_margin"
        app:cardCornerRadius="@dimen/cardview_corner_radius">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/textview_margin"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="vertical"
            android:maxLines="12"
            android:text="@string/any_text"
            android:textSize="@dimen/textview_text_size" />

    </android.support.v7.widget.CardView>

</FrameLayout>